{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["ES2020"],
		"rootDir": ".",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"types": ["node"],
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"],
			"@/configs/*": ["./configs/*"],
			"@/controllers/*": ["./controllers/*"],
			"@/middlewares/*": ["./middlewares/*"],
			"@/models/*": ["./models/*"],
			"@/routes/*": ["./routes/*"],
			"@/utils/*": ["./utils/*"],
			"@/validators/*": ["./validators/*"]
		}
	},
	"include": ["src/**/*", "index.ts"],
	"exclude": ["node_modules", "dist"]
}
